{% extends 'base.html.twig' %}

{% block title %}Adress index{% endblock %}

{% block body %}

    <section class="container my-4">

        <div class="d-flex justify-content-between mb-3">
            <p class="h2">Vos adresses</p>
            <a class="lien" href="{{ path('adress_new') }}">Créer une nouvelle adresse</a>
        </div>

        <table class="table table-borderless">
            <thead>
            <tr>
                <th>Pays</th>
                <th>Ville</th>
                <th>Code postal</th>
                <th>Adresse</th>
            </tr>
            </thead>
            <tbody>
                {% for adress in adresses %}
                <tr class="">
                    <td>{{ adress.country }}</td>
                    <td>{{ adress.city }}</td>
                    <td>{{ adress.postalCode }}</td>
                    <td>{{ adress.adress }}</td>
                    <td class="d-flex">
                        <a class="btnAdress1 me-2" href="{{ path('adress_edit', {'id': adress.id}) }}">Modifier</a>
                        {{ include('adress/_delete_form.html.twig') }}
                    </td>
                </tr>
                {% else %}
                    <tr>
                        <td colspan="6">Aucune adresse trouvé</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </section>
{% endblock %}
