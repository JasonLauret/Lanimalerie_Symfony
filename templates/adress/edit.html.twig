{% extends 'base.html.twig' %}

{% block title %}Modifier mon adresse{% endblock %}

{% block body %}
<section  class="bg_section">
    <div class="container py-5">
        {{ form_start(form) }}
        <div class="d-flex flex-column justify-content-center align-items-center">
            <div class="col-6 labelColor">
                <h2 class="pb-3">Modifier mon adresse</h2>
                <div>
                    {{ form_row(form.country, {"label": "Pays", "attr": {'class':'form-control'}}) }}
                </div>
                <div class="my-2">
                    {{ form_row(form.city, {"label": "Ville", "attr": {'class':'form-control'}}) }}
                </div>
                <div>
                    {{ form_row(form.postal_code, {"label": "Code postal", "attr": {'class':'form-control'}}) }}
                </div>
                <div class="my-2">
                    {{ form_row(form.adress, {"label": "Adresse", "attr": {'class':'form-control'}}) }}
                </div>
                <div class="d-flex justify-content-center mt-3">
                    <a class="btn_form me-2" href="{{ path('adress_index') }}">Revenir Ã  la liste</a>
                    <button class="btn_form">{{ button_label|default('Valider') }}</button>
                </div>
            </div>
        </div>
        {{ form_end(form) }}
    </div>
</section>
{% endblock %}
