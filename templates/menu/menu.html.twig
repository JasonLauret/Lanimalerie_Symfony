{% for category in categorys %}
    <li class="nav-item dropdown">
        <a class="nav_haut me-5 dropdown-toggle" role="button" data-bs-toggle="dropdown" aria-expanded="false">{{ category.name }}</a>
        <ul class="dropdown-menu p-2">
            
            {% for subCategory in subCategorys %}
                {% if category.id == subCategory.category.id %}
                    <li>
                        <a class="sous_categorie" href="{{ path('all_product', {'id':subCategory.id}) }}">{{ subCategory.name }}</a> 
                    </li>
                {% endif %}
            {% endfor %}
        </ul>
    </li>
{% endfor %}