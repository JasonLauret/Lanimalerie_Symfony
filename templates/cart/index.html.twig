{% extends 'base.html.twig' %}

{% block title %}Panier{% endblock %}

{% block body %}

<section class="container py-5">
    <h1>Mon panier</h1>
    {% if items | length > 0 %}
        <table class="table">
            <thead>
                <tr>
                    <th>Produit</th>
                    <th>Prix</th>
                    <th>Quantité</th>
                    <th>Total</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                {% for item in items %}
                    <tr>
                        <td>{{ item.product.name }}</td>
                        <td>{{ item.product.price }} €</td>
                        <td>{{ item.quantity }}</td>
                        <td>{{ item.product.price * item.quantity }} €</td>
                        <td>
                            <a href="{{ path('remove_cart', {'id': item.product.id}) }}" 
                                class="btn btn-danger btn-sm">
                                <i class="bi bi-trash"></i>
                            </a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
            <tfoot>
                <tr>
                    <td colspan="3" class="text-end">Total:</td>
                    <td> {{ total }} €</td>
                </tr>
            </tfoot>
        </table>
        <div class="text-end">
            <a href=" {{ path('delivery') }} " class="menu p-3">Passer commande<i class="bi bi-arrow-right-circle-fill fs-5 ps-3"></i></a>
        </div>
    {% else %}
        <p>Le panier est vide</p>
    {% endif %}
</section>
{% endblock %}