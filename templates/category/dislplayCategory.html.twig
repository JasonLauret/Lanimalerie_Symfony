{% extends 'base.html.twig' %}

{% block title %}Liste des catégorie !{% endblock %}

{% block body %}

<section class="container">
    <h1 class="my-3">Catégorie</h1>
    <table class="table">
        <tbody class="structure">
            <tr>
                <th>Id</th>
                <td>{{ category.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ category.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ category.description }}</td>
            </tr>
        </tbody>
    </table>
    <div class="d-flex justify-content-center mb-4">
        <a class="lien" href="{{ path('all_category') }}">Revenir à la liste</a>
        <a class="lien mx-2" href="{{ path('update_category', {'id':category.id}) }}) }}">Modifier</a>
        <a class="lien" href="{{ path('delete_category', {'id':category.id}) }}">Supprimer</a>
    </div>
</section>

{% endblock %}
