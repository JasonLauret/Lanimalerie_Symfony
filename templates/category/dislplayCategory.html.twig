{% extends 'base.html.twig' %}

{% block title %}Détail de la catégorie{% endblock %}

{% block body %}

<section class="container">
    <h1 class="my-3">Catégorie</h1>
    <table class="table">
        <tbody class="structure">
            <tr>
                <th>Nom</th>
                <td>{{ category.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ category.description }}</td>
            </tr>
        </tbody>
    </table>
    <div class="d-flex justify-content-center mb-4">
        <a class="lien" href="{{ path('all_category') }}">Revenir à la liste</a>
        <a class="lien mx-2" href="{{ path('update_category', {'id':category.id}) }}">Modifier</a>
        {# Modal #}
        <a class="lien" type="button" data-bs-toggle="modal" data-bs-target="#exampleModal">
            Supprimer
        </a>
        <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="">
                        <p class="h5 modal-title text-center mt-5 mb-3" id="exampleModalLabel">Si vous supprimez cette catégorie, les sous-catégorie ainsi que les produits associés à celle-ci seront aussi supprimés.</p>
                    </div>
                    <div class="modal-body text-center">
                        <p class="h2"></p>
                        <p class="mb-5">Êtes-vous bien sûr de vouloir effectuer cette opération ?</p>
                    </div>
                    <div class="modal-footer d-flex justify-content-between">
                        <a type="button" class="lien" data-bs-dismiss="modal">Ne pas supprimer</a>
                        <a class="lien" href="{{ path('delete_category', {'id':category.id}) }}">Oui, supprimer</a>
                    </div>
                </div>
            </div>
        </div>
        {# Fin modal #}
    </div>
</section>

{% endblock %}
