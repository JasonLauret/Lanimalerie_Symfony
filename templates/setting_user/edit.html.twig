{% extends 'base.html.twig' %}

{% block title %}Modification informations{% endblock %}

{% block body %}
    <section>
        <div class="container my-3">
            <div class="d-flex flex-column justify-content-center align-items-center">
                <div class="col-6">
                    <h2 class="mt-3">Modifier mes informations</h2>
                    {{ form_start(form) }}
                        <div class="mb-3">
                            {{ form_row(form.lastName, {"attr": {'class':'form-control'}}) }}
                        </div>
                        <div class="mb-3">
                            {{ form_row(form.firstName, {"attr": {'class':'form-control'}}) }}
                        </div>
                        <div class="mb-3">
                            {{ form_row(form.email, {"attr": {'class':'form-control'}}) }}
                        </div>
                        <div class="mb-4">   
                            {{ form_row(form.birthDate, {"attr": {'class':'form-control'}}) }}
                        </div>
                        <div class="mb-3">
                            {{ form_row(form.civility) }}
                        </div>
                        <div class="text-center">
                            <a class="lien p-2 me-2" href="{{ path('setting_user_index') }}">Retour</a>
                            <button class="lien_2">{{ button_label|default('Valider') }}</button>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </section>
{% endblock %}
