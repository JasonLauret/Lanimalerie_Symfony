{% extends 'base.html.twig' %}

{% block title %}Modifier mon mot de passe{% endblock %}

{% block body %}

    <section class="bg_section">
        <div class="container py-5">
            <div class="d-flex flex-column justify-content-center align-items-center">
                <div class="col-6 labelColor">
                    <h2 class=" pb-3">Modifier mon mot de passe</h2>
                    {{ form_start(form) }}
                        <div class="mb-3">
                            {{ form_row(form.password, {"attr": {'class':'form-control'}}) }}
                        </div>
                        <div class="mb-3">
                            {{ form_row(form.confirmPassword, {"attr": {'class':'form-control'}}) }}
                        </div>
                        <div class="text-center">
                            <a class="btn_form p-2 me-2" href="{{ path('setting_user_index') }}">Retour</a>
                            <button class="btn_form">{{ button_label|default('Valider') }}</button>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </section>
{% endblock %}
