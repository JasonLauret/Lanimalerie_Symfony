{% extends 'base.html.twig' %}


{% block title %}Register{% endblock %}

{% block body %}
    
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}
    <section class="bg_section">
        <div class="container py-5">
            <h4 class="labelColor text-center">Inscrivez-vous</h4>
            {{ form_start(form) }}

                <div class="pb-3 labelColor text-center">
                    {{ form_row(form.civility, {"label": "Civilité", "attr": {'class':''}}) }}
                </div>

                <div class="row labelColor">
                    <div class="col-12 col-md-6">
                        <div class="pb-3">
                            {{ form_row(form.lastName, {"label": "Nom", "attr": {'class':'form-control', 'placeholder':'Dupond'} }) }}
                        </div>
                        <div class="pb-3">
                            {{ form_row(form.firstName, {"label": "Prénom", "attr": {'class':'form-control', 'placeholder':'Aurélie'}}) }}
                        </div>
                        <div class="pb-3">
                            {{ form_row(form.email, {"label": "Email", "attr": {'class':'form-control', 'placeholder':'exemple@exemple.com'}}) }}
                        </div>
                        <div class="pb-3">
                            {{ form_row(form.password, {"label": "Mot de passe", "attr": {'class':'form-control'}}) }}
                        </div>
                        <div class="pb-3">
                            {{ form_row(form.confirmPassword, {"label": "Confimation du mot de passe", "attr": {'class':'form-control'}}) }}
                        </div>
                    </div>

                    <div class="col-12 col-md-6">
                        <div class="pb-3">
                            {{ form_row(form.country, {"label": "Pays", "attr": {'class':'form-control'}}) }}
                        </div>
                        <div class="pb-3">
                            {{ form_row(form.city, {"label": "Ville", "attr": {'class':'form-control'}}) }}
                        </div>
                        <div class="pb-3">
                            {{ form_row(form.postalCode, {"label": "Code postale", "attr": {'class':'form-control'}}) }}
                        </div>
                        <div class="pb-3">
                            {{ form_row(form.address, {"label": "Adresse 1", "attr": {'class':'form-control'}}) }}
                        </div>
                        <div class="pb-3 mt-3 mt-md-4">
                            {{ form_row(form.birthDate, {"label": "Date de naissance", "attr": {'class':'motif'}}) }}
                        </div>
                    </div>
                </div>
                <div class="text-center mt-3">
                    {{ form_row(form.agreeTerms, {"label": "J'accepte les conditions générales"}) }}
                    <button type="submit" class="btn_envoyer mt-2">M'inscrire</button>
                </div>

            {{ form_end(form, {'render_rest': false}) }}
        </div>
    </section>
{% endblock %}



