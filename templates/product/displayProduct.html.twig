{% extends 'base.html.twig' %}

{% block title %}Hello CategoryController!{% endblock %}

{% block body %}
    <div class="card mb-3" style="max-width: 540px;">
        <div class="row g-0">
            <div class="col-md-4">
                <img src="{{ product.picture }}" class="img-fluid rounded-start" alt="image {{ product.name }}">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title">{{ product.name }}</h5>
                    <p class="card-text">{{ product.description }}</p>
                    <p class="card-text"><small class="text-muted">Prix: {{ product.price }} â‚¬</small></p>
                </div>
            </div>
        </div>
    </div>
    <a href="{{ path('all_product') }}">Retour</a>
{% endblock %}
