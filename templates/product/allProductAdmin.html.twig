{% extends 'base.html.twig' %}

{% block title %}Liste des produits{% endblock %}

{% block body %}
    <section class="container mt-3">
        <h1>Liste des produits</h1>
        <a class="lien" href="{{ path('add_productAdmin') }}">Ajouter un produit</a>
        <table class="table mt-2">
            <thead>
                <tr>
                    <th>Nom</th>
                    <th>Marque</th>
                    <th>Image</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for product in products %}
                <tr class="structure">
                    <td>{{ product.name }}</td>
                    <td>
                        {% if product.brand.name %}
                            {{ product.brand.name }}
                        {% endif %}
                    </td> 
                    <td><img src="{{ asset('upload/' ~ product.picture) }}" alt="{{ product.name }}" style="height:100px; width:auto"></td>
                    <td>
                        <a class="lien" href="{{ path('display_productAdmin', {'id':product.id}) }}">Détail</a>
                        <a class="lien" href="{{ path('update_product', {'id':product.id}) }}) }}">Modifier</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6">Aucun produit trouvé</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <div class="pagination mt-5 d-flex justify-content-center">
            {{ knp_pagination_render(products) }}
        </div>
    </section>
{% endblock body %}