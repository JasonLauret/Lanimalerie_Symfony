{% extends 'base.html.twig' %}

{% block title %}Nouvelle marque{% endblock %}

{% block body %}
<section>
    <div class="container my-3">
        <div class="d-flex flex-column justify-content-center align-items-center">
            <div class="col-6">
                <h1 class="mt-3">Créer une nouvelle marque</h1>
                {{ form_start(form) }}
                    <div>
                        {{ form_row(form.name, {"attr": {'class':'form-control mb-4'}}) }}
                    </div>
                    <div>
                        {{ form_row(form.logo, {"attr": {'class':'form-control'}}) }}
                    </div>
                    <div class="mt-2 text-center">
                        <a class="lien p-2 me-2" href="{{ path('brand_index') }}">Revenir à la liste</a>
                        <button class="lien_2">Valider</button>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</section>
{% endblock %}
