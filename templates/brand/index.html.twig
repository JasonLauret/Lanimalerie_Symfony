{% extends 'base.html.twig' %}

{% block title %}Marques{% endblock %}

{% block body %}
    
    <section class="container mt-3">
        <h1>Liste des marques</h1>
        <a class="lien" href="{{ path('brand_new') }}">Ajouter une marque</a>
        <table class="table mt-2">
            <thead>
                <tr>
                    <th>Nom</th>
                    <th>Logo</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for brand in brands %}
                <tr class="structure">
                    <td>{{ brand.name }}</td>
                    <td><img src="{{ asset('upload/' ~ brand.logo) }}" alt="{{ brand.name }}" style="height:100px; width:auto"></td>
                    <td>
                        <a class="lien" href="{{ path('brand_show', {'id': brand.id}) }}">Détail</a>
                        <a class="lien" href="{{ path('brand_edit', {'id': brand.id}) }}">Modifier</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">Aucune marque trouvé</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </section>
{% endblock body %}