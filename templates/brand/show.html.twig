{% extends 'base.html.twig' %}

{% block title %}Brand{% endblock %}

{% block body %}

    <h1 class="ms-2">Brand</h1>
    
    <table class="table">
        <tbody class="structure">
            <tr>
                <th>Id</th>
                <td>{{ brand.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ brand.name }}</td>
            </tr>
            {% if brand.logo %}
            <tr>
                <th>Logo</th>
                <td><img src="{{ asset('upload/' ~ brand.logo) }}" alt="{{ brand.name }}" style="height:150px; width:auto"></td>
            </tr>
            {% endif %}
        </tbody>
    </table>

    <div class="d-flex mb-4">
        <a class="lien ms-2" href="{{ path('brand_index') }}">Revenir Ã  la liste</a>
        
        <a class="lien" href="{{ path('brand_edit', {'id': brand.id}) }}">Modifier</a>
        
        {{ include('brand/_delete_form.html.twig') }}
    </div>

{% endblock %}
