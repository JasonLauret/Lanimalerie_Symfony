{% extends 'base.html.twig' %}

{% block title %}Detail marque{% endblock %}

{% block body %}
<section class="container mt-3">
    <h1 class="mb-2">Détail de la marque</h1>
    <table class="table">
        <tbody class="structure">
            <tr>
                <th>Nom</th>
                <td>{{ brand.name }}</td>
            </tr>
            {% if brand.logo %}
            <tr>
                <th>Image</th>
                <td><img src="{{ asset('upload/' ~ brand.logo) }}" alt="{{ brand.name }}" style="height:150px; width:auto"></td>
            </tr>
            {% endif %}
        </tbody>
    </table>
    <div class="d-flex justify-content-center mb-4 border-none">
        <a class="lien" href="{{ path('brand_index') }}">Revenir à la liste</a>
        <a class="lien mx-2" href="{{ path('brand_edit', {'id': brand.id}) }}">Modifier</a>
        {# Modal #}
        <a class="lien" type="button" data-bs-toggle="modal" data-bs-target="#exampleModal">
            Supprimer
        </a>
        <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="">
                        <p class="h5 modal-title text-center mt-5 mb-3" id="exampleModalLabel">Vous vous appretez à supprimer une marque.</p>
                    </div>
                    <div class="modal-body text-center">
                        <p class="h2"></p>
                        <p class="mb-5">Êtes-vous bien sûr de vouloir effectuer cette opération ?</p>
                    </div>
                    <div class="modal-footer d-flex justify-content-between">
                        <a type="button" class="lien" data-bs-dismiss="modal">Ne pas supprimer</a>
                        {{ include('brand/_delete_form.html.twig') }}
                    </div>
                </div>
            </div>
        </div>
        {# Fin modal #}
    </div>
</section>
{% endblock %}
