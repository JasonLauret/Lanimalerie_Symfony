{% extends 'base.html.twig' %}
{% block body %}

<!--____________________________________Form_____________________________________-->
    
    <section class="bg_login">
        <div class="container">
            <div class="row">
                <div class="col-12 col-md-6 mb-1 py-5">
                    <h4 class="login_form text-center">Deja inscrit ?</h4>
                    <form class="row">
                        <div class="mb-3">
                            <label for="inputEmail3" class="login_form col-sm-2 col-form-label">Email</label>
                            <input type="email" class="form-control" id="inputEmail3">
                        </div>
                        <div class=" mb-3">
                            <label for="inputPassword3" class="login_form col-sm-2 col-form-label">Password</label>
                            <input type="password" class="form-control" id="inputPassword3">
                        </div>
                        <div class="mt-3 text-center">
                            <a type="submit" class="btn_login_form">Se connecter</a>
                        </div>
                    </form>
                </div>
                <div class="inscrit col-12 col-md-4 mt-5 p-4">
                    <div class="inscription my-5 p-3">
                        <p>Vous n'etes pas encore inscrit ? N'attendez plus !</p>
                        <a href="{{ path('app_registration') }}" class="btn_login_form">Inscription</a>
                    </div>
                </div>
            </div>
        </div>
    </section>

<!--________Back to top_______-->

    <div id="scrollUp">
        <a href="#top"><i class="bi bi-arrow-up-short"></i>Haut de page<i class="bi bi-arrow-up-short"></i></a>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js" integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf" crossorigin="anonymous"></script>
{% endblock %}