{% extends 'base.html.twig' %}

{% block title %}Modifier un utilisateur{% endblock %}

{% block body %}
<section>
    <div class="container mt-3">
        <div class="d-flex flex-column justify-content-center align-items-center">
            <div class="col-6">
                <h1 class="mt-3">Modifier la marque</h1>
                {{ form_start(form) }}

                    <div class="pb-3 labelColor text-center">
                        {{ form_row(form.civility, {"label": "Civilité", "attr": {'class':''}}) }}
                    </div>

                    <div class="row labelColor">
                        <div class="col-12 col-md-6">
                            
                            <div class="pb-3">
                                {{ form_row(form.lastName, {"label": "Nom", "attr": {'class':'form-control', 'placeholder':'Dupond'} }) }}
                            </div>
                            <div class="pb-3">
                                {{ form_row(form.firstName, {"label": "Prénom", "attr": {'class':'form-control', 'placeholder':'Aurélie'}}) }}
                            </div>
                            <div class="pb-3">
                                {{ form_row(form.email, {"label": "Email", "attr": {'class':'form-control', 'placeholder':'exemple@exemple.com'}}) }}
                            </div>
                            <div class="pb-3">
                                {{ form_row(form.plainPassword, {"label": "Mot de passe", "attr": {'class':'form-control'}}) }}
                            </div>
                            <div class="pb-3">
                                {{ form_row(form.confirm_password, {"label": "Confimation du mot de passe", "attr": {'class':'form-control'}}) }}
                            </div>
                            
                        </div>

                        <div class="col-12 col-md-6">
                            <div class="pb-3">
                                {{ form_row(form.country, {"label": "Pays", "attr": {'class':'form-control'}}) }}
                            </div>
                            <div class="pb-3">
                                {{ form_row(form.city, {"label": "Ville", "attr": {'class':'form-control'}}) }}
                            </div>
                            <div class="pb-3">
                                {{ form_row(form.postalCode, {"label": "Code postale", "attr": {'class':'form-control'}}) }}
                            </div>
                            <div class="pb-3">
                                {{ form_row(form.address, {"label": "Adresse 1", "attr": {'class':'form-control'}}) }}
                            </div>
                            <div class="pb-3 mt-1">
                                {{ form_row(form.birthDate, {"label": "Date de naissance", "attr": {'class':'motif'}}) }}
                            </div>
                        </div>
                    </div>

                {{ form_end(form, {'render_rest': true}) }}
            </div>
        </div>
    </div>
</section>
    
{% endblock %}
