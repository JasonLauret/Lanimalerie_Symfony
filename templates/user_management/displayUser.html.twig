{% extends 'base.html.twig' %}

{% block title %}Hello UserManagementController!{% endblock %}

{% block body %}

    <section class="container mt-3">
        <h1 class="mb-2">Product</h1>
        <table class="table">
            <tbody class="structure">
                <tr>
                    <th>Nom</th>
                    <td>{{ user.lastName }}</td>
                </tr>
                <tr>
                    <th>Prénom</th>
                    <td>{{ user.firstName }}</td>
                </tr>
                <tr>
                    <th>Email</th>
                    <td>{{ user.email }}</td>
                </tr>
                <tr>
                    <th>Date de naissance</th>
                </tr>
                <tr>
                    <th>Pays</th>
                    <td>{{ user.country }}</td>
                </tr>
                <tr>
                    <th>Ville</th>
                    <td>{{ user.city }}</td>
                </tr>
                <tr>
                    <th>Code postal</th>
                    <td>{{ user.postalCode }}</td>
                </tr>
                <tr>
                    <th>Adresse</th>
                    <td>{{ user.address }}</td>
                </tr>
                <tr>
                    <th>Civilité</th>
                    <td>{{ user.civility }}</td>
                </tr>
                <tr>
                    <th>Role</th>
                </tr>
                <tr>
                    <th>Compte vérifier | 0:Non 1:Oui</th>
                    <td>{{ user.isVerified }}</td>
                </tr>
            </tbody>
        </table>

        <div class="d-flex justify-content-center mb-4 border-none">
            <a class="lien" href="{{ path('user') }}">Revenir à la liste</a>
            <a class="lien mx-3" href="{{ path('update_user', {'id':user.id}) }}) }}">Modifier</a>
            <a class="lien" href="{{ path('delete_user', {'id':user.id}) }}">Supprimer</a>
        </div>
    </section>
{% endblock %}
