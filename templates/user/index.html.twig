{% extends 'base.html.twig' %}

{% block title %}Utilisateur{% endblock %}

{% block body %}

    <section class="container mt-3">
        <h1>Liste des utilisateurs</h1>
        <a class="lien" href="{{ path('user_new') }}">Ajouter un utilisateur</a>
        <table class="table mt-2">
            <thead>
                <tr>
                    <th>Nom</th>
                    <th>Prénon</th>
                    <th>Roles</th>
                    <th>Civilité</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for user in users %}
                <tr class="structure">
                    <td>{{ user.lastName }}</td>
                    <td>{{ user.firstName }}</td>
                    <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                    <td>{{ user.civility }}</td>
                    <td>
                        <a class="lien" href="{{ path('user_show', {'id': user.id}) }}">Détail</a>
                        <a class="lien" href="{{ path('user_edit', {'id': user.id}) }}">Modifier</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="12">Aucun utilisateur trouvé</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <div class="pagination mt-5 d-flex justify-content-center">
            {{ knp_pagination_render(users) }}
        </div>
    </section>
{% endblock %}
