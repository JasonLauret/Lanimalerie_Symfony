{% extends 'base.html.twig' %}

{% block title %}Nouvel utilisateur{% endblock %}

{% block body %}

    <section class="">
        <div class="container py-5">
            <h1>Créer un utilisateur</h1>
            {{ form_start(form) }}

                <div class="row labelColor">
                    <div class="col-12 col-md-6">
                        
                        <div class="pb-3">
                            {{ form_row(form.lastName, {"label": "Nom", "attr": {'class':'form-control', 'placeholder':'Dupond'} }) }}
                        </div>
                        <div class="pb-3">
                            {{ form_row(form.firstName, {"label": "Prénom", "attr": {'class':'form-control', 'placeholder':'Aurélie'}}) }}
                        </div>
                        <div class="pb-3">
                            {{ form_row(form.email, {"label": "Email", "attr": {'class':'form-control', 'placeholder':'exemple@exemple.com'}}) }}
                        </div>
                        <div class="pb-3">
                        {{ form_row(form.password, {"label": "Mot de passe", "attr": {'class':'form-control'}}) }}
                        </div>
                        <div class="pb-3">
                            {{ form_row(form.confirmPassword, {"label": "Confimation du mot de passe", "attr": {'class':'form-control'}}) }}
                        </div>
                        <div class="pb-3 mt-1">
                            {{ form_row(form.birthDate, {"label": "Date de naissance", "attr": {'class':'form-control'}}) }}
                        </div>
                        <div class="pb-3">
                            {{ form_row(form.roles, {"label": "Rôle"}) }}
                        </div>
                        
                        <div class="pb-3">
                            {{ form_row(form.civility, {"label": "Civilité", "attr": {'class':''}}) }}
                        </div>
                    </div>
                </div>

                <div class="mt-3 text-center">

                    <a class="lien" href="{{ path('user_index') }}">Revenir à la liste</a>
                    
                    <button class="lien_2">{{ button_label|default('Valider') }}</button>
                </div>

            {{ form_end(form, {'render_rest': true}) }}
        </div>
    </section>
{% endblock %}
