{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}

<section class="bg_section">
    <div class="container p-5">
        <div class="row d-flex">
            <div class="col-12 col-md-6">
                <h4 class="login_form">Deja inscrit ?</h4>
                <h1 class="h3 mb-3 font-weight-normal">Connecter vous</h1>
                <form method="post">
                    {% if error %}
                        <div class="alert alert-danger">
                            {{ error.messageKey|trans(error.messageData, 'security') }}
                        </div>
                    {% endif %}
                    {% if app.user %}
                        <div class="mb-3">
                            You are logged in as {{ app.user.username }}, 
                            <a href="{{ path('app_logout') }}">Logout</a>
                        </div>
                    {% endif %}
                    <label for="inputEmail">Email</label>
                    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
                    <label for="inputPassword">Mot de passe</label>
                    <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
                    <input type="hidden" name="_csrf_token"value="{{ csrf_token('authenticate') }}">
                    {#
                        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                        See https://symfony.com/doc/current/security/remember_me.html

                        <div class="checkbox mb-3">
                            <label>
                                <input type="checkbox" name="_remember_me"> Remember me
                            </label>
                        </div>
                    #}
                    <button class="btn_envoyer mt-3" type="submit">Connexion</button>
                </form>
            </div>
            <div class="col-12 col-md-6">
                <div class="inscrit d-flex justify-content-center align-items-center">
                    <div class="blockInscription p-3">
                        <p>Vous n'etes pas encore inscrit ?</p>
                        <p>N'attendez plus !</p>
                        <a href="{{ path('app_register') }}" class="btn_login_form">Inscription</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}
