{% extends 'base.html.twig' %}

{% block title %}Mot de passe oubli√©{% endblock %}

{% block body %}

    <section class="bg_section">
        <div class="container py-3">
            <div class="d-flex flex-column justify-content-center align-items-center">
                <div class="col-6 labelColor">
                    <h2 class="my-4">Veuillez saisir votre adresse e-mail</h2>
                    {{ form_start(emailForm) }}
                        <div class="mb-3">
                            {{ form_row(emailForm.email, {"label": "Email", "attr": {'class':'form-control'}}) }}
                        </div>
                        <div class="d-flex justify-content-center">
                            <a class="btn_form p-2 me-2" href="{{ path('app_login') }}">Retour</a>
                            {{ form_row(emailForm.envoyer, {"label": "Envoyer", "attr": {'class':'btn_form'}}) }}
                        </div>
                    {{ form_end(emailForm) }}
                </div>
            </div>
        </div>
    </section>

{% endblock %}
