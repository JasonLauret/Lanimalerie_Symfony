{% extends 'base.html.twig' %}

{% block title %}Nouveau mot de passe{% endblock %}

{% block body %}




<section class="bg_section">
        <div class="container py-3">
            <div class="d-flex flex-column justify-content-center align-items-center">
                <div class="col-6 labelColor">
                    <h2 class="my-4">Entrez votre nouveau mot de passe</h2>
                    {{ form_start(form) }}
                        <div class="mb-3">
                            {{ form_row(form.password, {"label": "Nouveau mot de passe", "attr": {'class':'form-control'}}) }}
                        </div>
                        <div class="mb-3">
                            {{ form_row(form.reset_token) }}
                        </div>
                        <div class="d-flex justify-content-center">
                            <a class="btn_form p-2 me-2" href="{{ path('app_login') }}">Retour</a>
                            {{ form_row(form.envoyer, {"label": "Envoyer", "attr": {'class':'btn_form'}}) }}
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </section>
{% endblock %}
