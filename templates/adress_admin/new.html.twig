{% extends 'base.html.twig' %}

{% block title %}New Adress{% endblock %}

{% block body %}

<section>
    <div class="container my-3">
        <div class="d-flex flex-column justify-content-center align-items-center">
            <div class="col-6">
                <h1 class="mt-3">Créer une nouvelle adresse</h1>
                {{ form_start(form) }}
                    <div class="mb-3">
                        {{ form_row(form.country, {"attr": {'class':'form-control'}}) }}
                    </div>
                    <div class="mb-3">
                        {{ form_row(form.city, {"attr": {'class':'form-control'}}) }}
                    </div>
                    <div class="mb-3">
                        {{ form_row(form.postal_code, {"attr": {'class':'form-control'}}) }}
                    </div>
                    <div>   
                        {{ form_row(form.adress, {"attr": {'class':'form-control'}}) }}
                    </div>
                    <div class="pb-3">
                        {{ form_row(form.user) }}
                    </div>
                    <div class="mt-3 text-center">
                        <a class="lien p-2 me-2" href="{{ path('adress_admin_index') }}">Revenir à la liste</a>
                        <button class="lien_2">{{ button_label|default('Valider') }}</button>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</section>
{% endblock %}
