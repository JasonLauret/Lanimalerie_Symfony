{% extends 'base.html.twig' %}

{% block title %}Adress index{% endblock %}

{% block body %}
    <h1>Adress index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Country</th>
                <th>City</th>
                <th>Postal_code</th>
                <th>Adress</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for adress in adresses %}
            <tr>
                <td>{{ adress.id }}</td>
                <td>{{ adress.country }}</td>
                <td>{{ adress.city }}</td>
                <td>{{ adress.postalCode }}</td>
                <td>{{ adress.adress }}</td>
                <td>
                    <a href="{{ path('adress_admin_show', {'id': adress.id}) }}">show</a>
                    <a href="{{ path('adress_admin_edit', {'id': adress.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('adress_admin_new') }}">Create new</a>
{% endblock %}
