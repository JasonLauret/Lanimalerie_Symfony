{% extends 'base.html.twig' %}

{% block title %}Sous-catégorie{% endblock %}

{% block body %}
    <section class="container">
        <h1 class="my-3">Sous-catégorie</h1>
        <table class="table">
            <tbody class="structure">
                <tr>
                    <th>Name</th>
                    <td>{{ sub_category.name }}</td>
                </tr>
                <tr>
                    <th>Description</th>
                    <td>{{ sub_category.description }}</td>
                </tr>
                <tr>
                    <th>Categorie parente</th>
                    <td>{{ sub_category.category.name }}</td>
                </tr>
            </tbody>
        </table>
        <div class="d-flex justify-content-center mb-4">
            <a class="lien" href="{{ path('sub_category_index') }}">Revenir à la liste</a>
            <a class="lien mx-2" href="{{ path('sub_category_edit', {'id': sub_category.id}) }}">Modifier</a>
            {{ include('sub_category/_delete_form.html.twig') }}
        </div>
    </section>
{% endblock %}
